{
  "name": "tora-spinner",
  "version": "1.0.0",
  "description": "A thread/worker spinner based on ora/yocto-spinner âœ¨",
  "type": "module",
  "scripts": {
    "lint": "biome check",
    "dev": "NODE_OPTIONS=\"--max-old-space-size=8192\" rollup -c --watch -m inline",
    "build": "rimraf dist && rollup -c",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "format": "biome format",
    "release": "turbo run release --concurrency=1"
  },
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./index.d.cts",
        "default": "./index.cjs"
      }
    },
    "./sync": {
      "types": "./toraSync.d.ts",
      "default": "./dist/toraSync.js"
    }
  },
  "files": ["*.cjs", "*.d.cts", "*.d.ts", "*.mjs", "bin", "dist"],
  "keywords": ["async", "spinner", "ora", "yocto-spinner", "threads"],
  "author": {
    "name": "Victor Mesquita",
    "email": "contato@victormesquita.dev"
  },
  "license": "UNLICENSED",
  "homepage": "https://github.com/quirkie-io/tora-spinner#readme",
  "bugs": "https://github.com/quirkie-io/tora-spinner/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/quirkie-io/tora-spinner"
  },
  "engines": {
    "node": "^18.0.0 || >=20.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@commitlint/cz-commitlint": "^19.5.0",
    "@release-it/conventional-changelog": "^8.0.2",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/node": "^22.5.5",
    "commitizen": "^4.3.0",
    "release-it": "^17.6.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.22.4",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "typescript": "^5.6.2",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1",
    "vitest-mock-extended": "^2.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "yocto-spinner": "^0.1.0"
  },
  "peerDependencies": {
    "yocto-spinner": "^0.1.0"
  },
  "packageManager": "yarn@4.5.0"
}
