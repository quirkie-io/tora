{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@ui/*": ["./src/ui/*"]
    }
  },
  "exclude": ["node_modules", "test/fixtures/**/*"],
  "include": ["src/**/*"]
}
